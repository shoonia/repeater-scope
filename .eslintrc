{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "$w": "readonly"
  },
  "ignorePatterns": [
    "dist/"
  ],
  "rules": {
    "linebreak-style": "off",
    "no-console": "off",
    "no-else-return": "error",
    "require-await": "error",
    "no-trailing-spaces": "error",
    "no-multiple-empty-lines": [
      "error", {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 2
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  }
}
